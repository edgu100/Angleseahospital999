<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.edgu1.angleseahospital.Patient_info">


    <RelativeLayout
        android:layout_width="400dp"
        android:layout_height="508dp">
        <ImageView
            android:id="@+id/patientinfobackbroundcolor"
            android:layout_width="385dp"
            android:layout_height="40dp"
            android:background="@color/colorAccent" />

        <TextView
            android:id="@+id/PatientInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:text="Patient Information"
            android:textColor="@android:color/background_light"
            android:textSize="25sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/NameTextview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/PatientInfo"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:text="Patient Nameï¼š"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/NameEditview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/PatientInfo"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@+id/NameTextview"
            android:text="Name"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/RoomTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/NameEditview"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:text="Room Number:"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/RoomEditView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/NameEditview"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@+id/RoomTextView"
            android:text="NameTextView"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/NHITextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/RoomTextView"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:text="NHI NUMBER"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/NHIEditView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/RoomEditView"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@+id/NHITextView"
            android:text="NHI number"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/DrugImView"
            android:layout_width="385dp"
            android:layout_height="40dp"
            android:layout_below="@+id/NHITextView"
            android:layout_marginTop="11dp"
            android:background="@color/colorAccent"/>

        <TextView
            android:id="@+id/DrugInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/DrugImView"
            android:layout_marginStart="10dp"
            android:text="Drug Details"
            android:textColor="@android:color/background_light"
            android:textSize="25sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/DrugName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Drug Name: "
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_below="@+id/DrugImView"
            android:layout_alignStart="@+id/DrugInfo"
            android:layout_marginTop="10dp" />
        <TextView
            android:id="@+id/DrugEditView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Drug Name"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_alignBaseline="@+id/DrugName"
            android:layout_alignBottom="@+id/DrugName"
            android:layout_toEndOf="@+id/DrugName" />

    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
