<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:id="@+id/pa_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="22dp"
        android:layout_marginTop="94dp"
        android:text="Name:"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/pa_brithday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/pa_name"
        android:layout_below="@+id/pa_name"
        android:layout_marginTop="22dp"
        android:text="Birthday: "
        android:textSize="25sp" />

    <TextView
        android:id="@+id/pa_wight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/pa_brithday"
        android:layout_below="@+id/pa_brithday"
        android:layout_marginTop="25dp"
        android:text="Wight:"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/pa_NHINo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/pa_wight"
        android:layout_below="@+id/pa_wight"
        android:layout_marginTop="25dp"
        android:text="NHI-No:"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/pa_RoomNo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/pa_NHINo"
        android:layout_below="@+id/pa_NHINo"
        android:layout_marginTop="25dp"
        android:text="Room-No:"
        android:textSize="25sp" />

    <EditText
        android:id="@+id/pa_add_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/pa_brithday"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="16dp"
        android:ems="10"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/pa_add_birthday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/pa_brithday"
        android:layout_alignEnd="@+id/pa_add_name"
        android:ems="10"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/pa_add_wight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/pa_NHINo"
        android:layout_alignStart="@+id/pa_add_birthday"
        android:ems="10"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/pa_add_NHINo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/pa_RoomNo"
        android:layout_alignEnd="@+id/pa_add_wight"
        android:ems="10"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/pa_add_RoomNo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/pa_RoomNo"
        android:layout_alignStart="@+id/pa_add_NHINo"
        android:ems="10"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/pa_update"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:background="@drawable/buttonshape"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:text="Update"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/pa_RoomNo"
        android:layout_marginBottom="27dp" />

    <Button
        android:id="@+id/pa_cancle"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_marginEnd="15dp"
        android:background="@drawable/buttonshape"
        android:text="Cancle"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:layout_alignBaseline="@+id/pa_update"
        android:layout_alignBottom="@+id/pa_update"
        android:layout_alignEnd="@+id/pa_add_RoomNo" />


</RelativeLayout>