<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name:"
        android:textSize="22dp"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:id="@+id/n1"
        android:layout_marginLeft="20dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/n1"
        android:layout_marginTop="10dp"
        android:text=""
        android:textSize="18dp"
        android:textStyle="bold"
        android:layout_marginLeft="10dp"
        android:id="@+id/DrugName"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/n1"
        android:layout_marginLeft="20dp"
        android:text="productionDate:"
        android:id="@+id/n2"
        android:textSize="18dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/n2"
        android:layout_below="@+id/n1"
        android:textSize="18dp"
        android:text=""
        android:layout_marginLeft="10dp"
        android:id="@+id/DrugproductionDate"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/n2"
        android:layout_marginLeft="20dp"
        android:text="shelfLife:"
        android:id="@+id/n3"
        android:textSize="18dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/n3"
        android:layout_below="@+id/n2"
        android:textSize="18dp"
        android:text=""
        android:layout_marginLeft="10dp"
        android:id="@+id/DrugshelfLife"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/n3"
        android:layout_marginLeft="20dp"
        android:text="specification:"
        android:id="@+id/n4"
        android:textSize="18dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/n4"
        android:layout_below="@+id/n3"
        android:textSize="18dp"
        android:text=""
        android:layout_marginLeft="10dp"
        android:id="@+id/Drugspecification"/>


</RelativeLayout>