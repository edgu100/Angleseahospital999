<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/patientinfobackbroundcolor"
        android:layout_width="385dp"
        android:layout_height="40dp"
        android:background="@color/colorAccent" />

    <TextView
        android:id="@+id/pdd_drug_name"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Drugs"
        android:textAlignment="center"
        android:textColor="@android:color/background_light"
        android:textSize="27sp"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="26dp"
        android:text="Dosage = "
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_below="@+id/patientinfobackbroundcolor"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="93dp"
        android:text="Total Medication = "
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_below="@+id/textView3"
        android:layout_alignStart="@+id/textView3" />

    <EditText
        android:id="@+id/pdd_so"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView3"
        android:layout_below="@+id/textView3"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Standing Order"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" * "
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_alignBaseline="@+id/pdd_so"
        android:layout_alignBottom="@+id/pdd_so"
        android:layout_alignEnd="@+id/textView4"
        android:layout_toEndOf="@+id/pdd_so" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" KG"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_alignBottom="@+id/textView5"
        android:layout_toEndOf="@+id/pdd_getTm" />

    <TextView
        android:id="@+id/pdd_get_dosage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView4"
        android:layout_below="@+id/textView4"
        android:layout_marginTop="25dp"
        android:text="Dosage"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/pdd_get_dosage"
        android:layout_alignBottom="@+id/pdd_get_dosage"
        android:layout_toEndOf="@+id/pdd_get_dosage"
        android:text=" / "
        android:textSize="18sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/pdd_dmg"
        android:layout_width="135dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView10"
        android:layout_alignBottom="@+id/textView10"
        android:layout_toEndOf="@+id/textView10"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Drug Milligrams"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView10"
        android:layout_toEndOf="@+id/pdd_dmg"
        android:text=" * "
        android:textSize="18sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/pdd_dml"
        android:layout_width="125dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/pdd_dmg"
        android:layout_toEndOf="@+id/textView12"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Drug Milliliters"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/pdd_getDosage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView3"
        android:layout_alignBottom="@+id/textView3"
        android:layout_toEndOf="@+id/textView3"
        android:text="TextView"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/pdd_getTm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView4"
        android:layout_toEndOf="@+id/pdd_getDosage"
        android:text="TextView"
        android:textSize="20sp" />

    <Button
        android:id="@+id/pdd_cancle"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:background="@drawable/buttonshape"
        android:text="Cancel"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:layout_alignBaseline="@+id/pdd_confirm"
        android:layout_alignBottom="@+id/pdd_confirm"
        android:layout_alignStart="@+id/pdd_dml" />

    <Button
        android:id="@+id/pdd_confirm"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:background="@drawable/buttonshape"
        android:text="Confirm"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:layout_marginBottom="18dp"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/pdd_so" />

    <ImageView
        android:id="@+id/patientinfobackbround"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/colorAccent"
        android:layout_above="@+id/pdd_FHours"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Frequency"
        android:textAlignment="center"
        android:textColor="@android:color/background_light"
        android:textSize="27sp"
        android:textStyle="bold"
        android:layout_alignTop="@+id/patientinfobackbround"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/pdd_FHours"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Hours"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_above="@+id/pdd_cancle"
        android:layout_alignStart="@+id/pdd_confirm"
        android:layout_marginBottom="31dp" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hour(s)"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_alignBaseline="@+id/pdd_FHours"
        android:layout_alignBottom="@+id/pdd_FHours"
        android:layout_toEndOf="@+id/pdd_FHours" />

    <EditText
        android:id="@+id/pdd_wight"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/pdd_so"
        android:layout_toEndOf="@+id/pdd_getDosage"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Weight"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/pdd_getDosage"
        android:layout_alignBottom="@+id/pdd_getDosage"
        android:layout_toEndOf="@+id/textView5"
        android:text=" mg"
        android:textSize="20sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/pdd_calculate"
        android:layout_width="110dp"
        android:layout_height="40dp"
        android:background="@drawable/buttonshape"
        android:onClick="pdd_calculate_onClick"
        android:text="calculate"
        android:textColor="@android:color/white"
        android:textSize="15sp"
        android:layout_above="@+id/patientinfobackbround"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/pdd_getTm"
        android:layout_toEndOf="@+id/pdd_wight"
        android:text=" ml"
        android:textSize="20sp"
        android:textStyle="bold" />


</RelativeLayout>