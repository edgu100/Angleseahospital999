<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/patientinfobackbroundcolor"
        android:layout_width="385dp"
        android:layout_height="40dp"
        android:background="@color/colorAccent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Choose Drugs"
        android:textAlignment="viewStart"
        android:textColor="@android:color/background_light"
        android:textSize="27sp"
        android:textStyle="bold"
        android:layout_alignBottom="@+id/patientinfobackbroundcolor" />

    <Button
        android:id="@+id/pdd_confirm"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:background="@drawable/buttonshape"
        android:text="Confirm"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:layout_marginStart="61dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/pdd_cancel"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="56dp"
        android:layout_toEndOf="@+id/pdd_confirm"
        android:background="@drawable/buttonshape"
        android:text="Cancel"
        android:textColor="@android:color/white"
        android:textSize="18sp" />

    <ListView
        android:id="@+id/pdd_ListView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/pdd_confirm"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/patientinfobackbroundcolor" />

</RelativeLayout>