<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/patientinfobackbroundcolor"
        android:layout_width="385dp"
        android:layout_height="40dp"
        android:background="@color/colorAccent" />

    <TextView
        android:id="@+id/pdd_drug_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Drugs"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:textColor="@android:color/background_light"
        android:textSize="27sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="Dosage = "
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/pdd_getDosage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_toEndOf="@+id/textView3"
        android:text="0"
        android:layout_marginLeft="140px"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_toEndOf="@+id/textView5"
        android:text=" mg"
        android:textSize="20sp"
        android:textStyle="bold" />




    <EditText
        android:id="@+id/pdd_so"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:inputType="textPersonName"
        android:hint="Standing Order"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" * "
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_alignBaseline="@+id/pdd_so"
        android:layout_toEndOf="@+id/pdd_so"
        android:layout_marginTop="80dp"/>

    <EditText
        android:id="@+id/pdd_wight"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Weight"
        android:layout_marginTop="80dp"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginLeft="180dp"/>

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" KG"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="90dp"
        android:layout_marginLeft="250dp"/>


    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="150dp"
        android:text="Total Medication = "
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/pdd_getTm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="150dp"
        android:text="0"
        android:layout_marginLeft="190dp"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="150dp"
        android:layout_marginLeft="250dp"
        android:text=" ml"
        android:textSize="20sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/pdd_get_dosage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="200dp"
        android:hint="Dosage"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="210dp"
        android:layout_marginLeft="65dp"
        android:text=" / "
        android:textSize="18sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/pdd_dmg"
        android:layout_width="135dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="200dp"
        android:layout_marginLeft="80dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Drug Milligrams"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="210dp"
        android:layout_marginLeft="210dp"
        android:text=" * "
        android:textSize="18sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/pdd_dml"
        android:layout_width="125dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="200dp"
        android:layout_marginLeft="230dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Drug Milliliters"
        android:textSize="18sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/pdd_calculate"
        android:layout_width="110dp"
        android:layout_height="40dp"
        android:background="@drawable/buttonshape"
        android:onClick="pdd_calculate_onClick"
        android:text="calculate"
        android:textColor="@android:color/white"
        android:textSize="15sp"
        android:layout_marginTop="270dp"
        android:layout_centerHorizontal="true" />


    <ImageView
        android:id="@+id/patientinfobackbround"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/colorAccent"
        android:layout_marginTop="330dp"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Frequency"
        android:textAlignment="center"
        android:textColor="@android:color/background_light"
        android:textSize="27sp"
        android:textStyle="bold"
        android:layout_alignTop="@+id/patientinfobackbround"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/pdd_FHours"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="Hours"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="380dp"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hour(s)"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_alignBaseline="@+id/pdd_FHours"
        android:layout_alignBottom="@+id/pdd_FHours"
        android:layout_toEndOf="@+id/pdd_FHours" />




    <Button
        android:id="@+id/pdd_confirm"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:background="@drawable/buttonshape"
        android:text="Confirm"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:layout_marginTop="450dp"
        android:layout_centerHorizontal="true"
        android:onClick="comfirm"/>












</RelativeLayout>