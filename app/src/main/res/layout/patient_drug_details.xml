<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/patientinfobackbroundcolor"
        android:layout_width="385dp"
        android:layout_height="40dp"
        android:background="@color/colorAccent" />

    <TextView
        android:id="@+id/pdd_drug_name"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignBottom="@+id/patientinfobackbroundcolor"
        android:layout_alignParentStart="true"
        android:text="Drugs"
        android:textAlignment="center"
        android:textColor="@android:color/background_light"
        android:textSize="27sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="26dp"
        android:text="Dosage = "
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_below="@+id/patientinfobackbroundcolor"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="93dp"
        android:text="Total Medication = "
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_below="@+id/textView3"
        android:layout_alignStart="@+id/textView3" />

    <EditText
        android:id="@+id/pdd_so"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Standing Order"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_below="@+id/textView3"
        android:layout_alignStart="@+id/textView3"
        android:layout_marginTop="20dp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" * "
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_alignBaseline="@+id/pdd_so"
        android:layout_alignBottom="@+id/pdd_so"
        android:layout_alignEnd="@+id/textView4" />

    <TextView
        android:id="@+id/pdd_wight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textView5"
        android:layout_toEndOf="@+id/textView5"
        android:text="50"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/pdd_wight"
        android:layout_toEndOf="@+id/pdd_wight"
        android:text=" KG"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/pdd_get_dosage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:text="Dosage"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_below="@+id/textView4"
        android:layout_alignStart="@+id/textView4" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/pdd_get_dosage"
        android:layout_alignBottom="@+id/pdd_get_dosage"
        android:layout_toEndOf="@+id/pdd_get_dosage"
        android:text=" / "
        android:textSize="20sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/pdd_dmg"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView10"
        android:layout_alignBottom="@+id/textView10"
        android:layout_toEndOf="@+id/textView10"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Drug Milligrams"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView10"
        android:layout_toEndOf="@+id/pdd_dmg"
        android:text=" * "
        android:textSize="20sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/editText4"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Name"
        android:layout_alignBottom="@+id/pdd_dmg"
        android:layout_toEndOf="@+id/textView12" />

</RelativeLayout>